# ===========================================
# TURBOVETS - TASK MANAGEMENT SYSTEM
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database type (sqlite, postgres, mysql)
DB_TYPE=sqlite

# SQLite database file path
DB_DATABASE=database.sqlite

# PostgreSQL/MySQL configuration (uncomment if using)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=password
# DB_DATABASE=turbovets

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# API server port
PORT=3000

# API server host
HOST=localhost

# Environment (development, production, test)
NODE_ENV=development

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# JWT secret key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration time
JWT_EXPIRES_IN=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:4200,http://localhost:4201,http://localhost:4202

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Angular development server port
ANGULAR_PORT=4200

# Static frontend server port
STATIC_PORT=4201

# Enhanced dashboard port
ENHANCED_PORT=4202

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Enable database query logging
DB_LOGGING=true

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Password hashing rounds (higher = more secure, slower)
BCRYPT_ROUNDS=12

# Session timeout in minutes
SESSION_TIMEOUT=1440

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable database synchronization (only for development)
DB_SYNCHRONIZE=true

# Enable API documentation
ENABLE_SWAGGER=true

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Uncomment and configure for production
# DB_SYNCHRONIZE=false
# DB_LOGGING=false
# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret-key
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
